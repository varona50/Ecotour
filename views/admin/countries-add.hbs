<div class="row"></div>
<form action="" method="POST" class="form-horizontal" role="form">
  <div class="form-group">
    <legend class="col-md-3 col-md-offset-2">{{title}}</legend>
  </div>

  <div class="form-group">
    <label for="countryName" class="control-label col-md-2 col-md-offset-1">
      Country:
    </label>
    <div class="form-group col-md-6">
      <input class="form-control" type="text" id="countryName" name="countryName" required="required">
    </div>
  </div>

  <div class="form-group">
    <label for="countryDescription" class="control-label col-md-2 col-md-offset-1">
     Description:
    </label>
    <div class="form-group col-md-6">
      <textarea name="countryDescription" id="countryDescription" class="form-control" rows="6"></textarea>
    </div>
  </div>

  <div class="form-group">
    <label for="ImageUrl" class="control-label col-md-2 col-md-offset-1">
      Image:
    </label>
    <div class="form-group col-md-6">
      <input type="url" name="ImageUrl" id="ImageUrl" class="form-control"></input>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-6 col-sm-offset-6">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
  </div>
</form>
</div>